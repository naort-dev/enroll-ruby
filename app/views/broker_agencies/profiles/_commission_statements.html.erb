<div class="bottom-pd" id='commissions'>
  <div class="no_margin">
    <div class="col-xs-12 no-pd">
      <h3 class="title-inline">Commission Statements</h3>
      <table class="table" id="commissions-table">
        <thead>
          <tr>
            <th>Year</th>
            <th>Statement Date</th>
            <th>Coverage Period</th>
            <th>Download</th>
            <th>View</th>
          </tr>
        </thead>
        <tbody class="commissions">
          <% @statements.each do |statement| %>
            <tr data-toggle="collapse" data-target="#collapse2" id="<%= statement %>" class="statement_years">
              <td><i class='glyphicon glyphicon-plus' data-toggle='tooltip'></i> <%= statement %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <% invoices_2 = [] %>
              <% if invoices_2.empty? %>
                <tr class="invoices <%= statement %>">
                  <td></td>
                  <td>You have no commission statements for this year</td>
                  <td></td>
                  <td><%= link_to "<i class='fa fa-cloud-download' aria-hidden='false' title='Download' data-toggle='tooltip'></i>".html_safe, download_commission_statement_broker_agencies_profile_path(@broker_agency_profile, :statement_id => "wejrowjeroewjd"), :target => "_blank" , :type => "pdf", :disposition =>  "inline" %></td>
                  <td><%= link_to "<i class='glyphicon glyphicon-open-file' aria-hidden='true' data-toggle='tooltip'></i>".html_safe,  download_commission_statement_broker_agencies_profile_path(@broker_agency_profile, :statement_id => "wejrowjeroewjd"), :target => "_blank" %></td>
                </tr>
              <% else %>

              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  $('td i').click(function() {
    $(this).toggleClass("glyphicon glyphicon-plus glyphicon glyphicon-minus");
  });

  $(document).ready(function() {
    $('tr.invoices').hide();

    $('.statement_years').each(function() {
      $(this).click(function() {
        $('tr.' + $(this).attr('id')).toggle();
      })
    });

  });
</script>
