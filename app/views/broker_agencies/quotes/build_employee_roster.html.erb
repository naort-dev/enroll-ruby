<div class="container module broker_quote_tool">
	<%= form_for @quote, url: {action: "create"}, method: "post", class: "form inline" do |f| %>
		<%= render "edit_form", f:f %>
		<div class="footer navbar-fixed-bottom"></div>
		<div class="row sticky-main-nav">
			<div class="col-sm-10">
				<%= submit_tag l10n("save_changes") , class: 'btn btn-primary btn-sm!' %>
			</div>
			<div class="col-sm-2">
				<%= link_to l10n('back_to_quotes') , my_quotes_broker_agencies_broker_role_quotes_path, class: 'btn btn-primary btn-sm!', data: { no_turbolink: true } %>
			</div>
		</div>
	<%end%>
</div>