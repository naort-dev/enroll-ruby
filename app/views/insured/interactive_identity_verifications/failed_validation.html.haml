.content
  .container
    .row
      .col-lg-7.col-md-7.col-sm-8.col-xs-12
        - if @step == 'start'
          %h4 To keep your data secure, we are required to verify your identity electronically using the credit reporting agency Experian. Unfortunately, Experian was unable to confirm your identity based on the information you provided. You have two options for completing your application:
          %br
          1. Complete your application at the DC Health Benefit Exchange Authority. Please call (202) 715-7576 to set up an appointment.
          %br
          %br
          2. Complete a paper application form, scan it, and email it to info@dchealthlink.com. Click here for the paper application form. Be sure to fill out all the required information so that we can process your application as soon as possible.
          %br
        - else
          %h4= t('insured.interactive_identity_verifications.failed_validation.contact_information', :ref_number => @verification_transaction_id)

        %p= link_to(t('insured.interactive_identity_verifications.failed_validation.override'), insured_interactive_identity_verification_path(:id => @verification_transaction_id), :method => :put, :class => "btn btn-primary  btn-small interaction-click-control-override-identity-verification" + pundit_class(Family, :updateable?))
        %br
        .btn.btn-default{"data-target" => "#help_with_plan_shopping", "data-toggle" => "modal"}
          Help me sign up
        %br
          = render partial: 'insured/plan_shoppings/help_with_plan'
        %br
        .outstanding-ridp-documents
          = render partial: 'insured/interactive_identity_verifications/outstanding_ridp_documents'
      .col-lg-3.col-md-3.col-sm-3.col-xs-12.col-md-offset-2.col-sm-offset-1.right-section
        = render  partial: 'shared/individual_progress', locals: {ridp:true, step: '2', next_link: insured_interactive_identity_verification_path(:id => @verification_transaction_id), identity_verified: @person.consumer_role.identity_verified?, identity_verified: @person.consumer_role.application_verified?}
