<h3>Verification History Tracker</h3>

<h4><%= person.full_name %></h4>
<table class="table table-bordered table-hover table-responsive">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Date</th>
    <th scope="col">Collection</th>
    <th scope="col">Action</th>
    <th scope="col">Modifier</th>
    <th scope="col">Changed Info</th>
    <th scope="col">Details</th>
  </tr>
  </thead>
  <tbody>
  <% person.consumer_role.history_action_trackers.each_with_index do |record, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= record.created_at %></td>
        <td><%= record.tracked_collection %></td>
        <td><%= record.action %></td>
        <td><%= record.actor %></td>
        <td>
          <ul class="list-group">
            <% record.modified_attributes.each do |attr, val| %>
                <li class="list-group-item"><%= mod_attr(attr, val) %></li>
            <% end %>
          </ul>
        </td>
        <td><%= record.details %></td>
      </tr>
  <% end %>
  </tbody>
</table>