<div class="table-responsive">
  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Relationship</th>
        <th>Age</th>
        <th>Premium</th>
        <th>Employer Contribution</th>
        <th>You Pay</th>
      </tr>
    </thead>
    <tbody>
      <% @plan = enrollment.decorated_hbx_enrollment %>
      <% enrollment.hbx_enrollment_members.each do |member| %>
      <tr>
        <td><%= member.person.full_name %></td>
        <td><%= member.primary_relationship %></td>
        <td><%= dob_in_words(member.person.age_on(TimeKeeper.date_of_record), member.person.dob) %></td>
        <%# TODO %>
        <td><%#= @plan.sole_source? ? "--" : number_to_currency(@plan.premium_for(member)) %></td>
        <td><%#= @plan.sole_source? ? "--" : number_to_currency(@plan.employer_contribution_for(member)) %></td>
        <td><%#= @plan.sole_source? ? "--" : number_to_currency(@plan.employee_cost_for(member)) %></td>
      </tr>
      <% end %>
      <tr class="gray-row">
        <td class="capital">
          <strong>Totals</strong>
        </td>
        <td></td>
        <td></td>
        <td>
          <strong><%= number_to_currency(@plan.member_enrollments[0].product_price.to_f) %></strong>
        </td>
        <td>
          <strong><%= number_to_currency(@plan.member_enrollments[0].sponsor_contribution.to_f) %></strong>
        </td>
        <td>
          <strong><%= number_to_currency(@plan.member_enrollments[0].product_price.to_f - @plan.member_enrollments[0].sponsor_contribution.to_f ) %></strong>
        </td>
      </tr>
    </tbody>
  </table>
</div>
