<%= form_for @qle || QualifyingLifeEventKind.new, url: exchanges_manage_qles_path, method: :post, html: {class: 'form-horizontal'} do |f| %>
    <% if @qle.present? && @qle.errors.any? %>
        <div class="alert alert-error">
          <h4>
            <%= "#{pluralize(@qle.errors.size, "error")} prohibited this announcement from being saved:" %>
          </h4>
          <ul>
            <% @qle.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, 'Title', class: 'col-sm-2 control-label' %>
        <%= input_text_control(EnrollRegistry[:sep_types].setting(:title),f) %>
    </div>


<% end %>
