<div class="container mt-3">

	<h4 class='title'><%= l10n("exchange.manage_sep_types.sort_sep_types")%></h4>
	<!-- Nav tabs -->
	<div id="sort_notification_msg"  class="toast" role="alert" aria-live="assertive" aria-atomic="true">
		<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
		  <span aria-hidden="true">&times;</span>
		</button>
	  <div class="toast-header">
	    <strong class="mr-auto"></strong>
	  </div>
	  <div class="toast-body"></div>
	</div>

	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link active" data-toggle="tab" href="#individual"><%= l10n("exchange.manage_sep_types.individual")%></a>
		</li>
		<li class="nav-item">
			<a class="nav-link" data-toggle="tab" href="#shop"><%= l10n("exchange.manage_sep_types.shop")%></a>
		</li>
		<li class="nav-item">
			<a class="nav-link" data-toggle="tab" href="#fehb"><%= l10n("exchange.manage_sep_types.fehb")%></a>
		</li>
		<li class="nav-item">
			<a class="btn btn-sep-sort-default nav-link right-align" href="/exchanges/manage_sep_types/sep_types_dt"><%= l10n("exchange.manage_sep_types.sep_type_list")%></a>
		</li>
	</ul>

	<div  id="sort_success_msg" class="row flash module"></div>

 <!-- Tab panes -->
	<div class="tab-content">
	 	<div id="individual" class="container tab-pane active"><br>
          <!--// TODO  check here-->
			<h3><%= l10n("exchange.manage_sep_types.titles")%></h3>
	   	<div class="container">
				<div class="row">
					<div data-controller="drag" data-drag-url="/exchanges/manage_sep_types/:id/move">
						<% @sortable.where(market_kind: "individual").active.each_with_index do |sort, i|%>
		          <div id='<%= "#{sort.reason}_#{sort.market_kind}" %>' data-id="<%= sort.id %>" data-ordinal_position="<%= sort.ordinal_position %>" data-index="<%=i%>" data-market_kind="<%=sort.market_kind%>" class="card card-body mb-4">
								<%= sort.title%>
		          </div>
	         	<%end%>
	        </div>
				</div>
			</div>
   	</div>

	 	<div id="shop" class="container tab-pane fade"><br>
			<h3><%= l10n("exchange.manage_sep_types.titles")%></h3>
	   	<div class="container">
				<div class="row">
					<div data-controller="drag" data-drag-url="/exchanges/manage_sep_types/:id/move">
						<% @sortable.where(market_kind: "shop").active.each_with_index do |sort, i|%>
		          <div id='<%= "#{sort.reason}_#{sort.market_kind}" %>' data-id="<%= sort.id %>" data-ordinal_position="<%= sort.ordinal_position %>" data-index="<%=i%>" data-market_kind="<%=sort.market_kind%>" class="card card-body mb-4">
								<%= sort.title%>
		          </div>
	         	<%end%>
	        </div>
				</div>
			</div>
   	</div>

	 	<div id="fehb" class="container tab-pane fade"><br>
			<h3><%= l10n("exchange.manage_sep_types.titles")%></h3>
	   	<div class="container">
				<div class="row">
					<div data-controller="drag" data-drag-url="/exchanges/manage_sep_types/sort">
						<% @sortable.by_market_kind('fehb').active.each_with_index do |sort, i|%>
		          <div id='<%= "#{sort.reason}_#{sort.market_kind}" %>' data-id="<%= sort.id %>" data-ordinal_position="<%= sort.ordinal_position %>" data-index="<%=i%>" data-market_kind="<%=sort.market_kind%>" class="card card-body mb-4">
								<%= sort.title%>
		          </div>
	         	<%end%>
	        </div>
				</div>
			</div>
   	</div>
  </div>
</div>
