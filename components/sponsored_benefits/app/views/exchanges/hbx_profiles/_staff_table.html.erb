<thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>email</th>
    <th>Organization</th>
    <th>Shift</th>
    <th>Role</th>
    <th>&nbsp;</th>
  </tr>
</thead>

<tbody>
  <% @staff.each do |staff| %>
    <tr>
      <td><%= staff.first_name%></td>
      <td><%= staff.last_name %></td>
      <td><%= staff.user.try(:email) %></td>
      <td><%= staff.assister_role.try(:organization) || staff.csr_role.try(:organization) %>
      <td><%= staff.csr_role.try(:shift) %></td>
      <td><%= if staff.csr_role 
                staff.csr_role.cac ? 'CAC' : 'CSR'
              else
                'Assister'
              end   %>
      </td>
    </tr>
  <% end %>
</tbody>