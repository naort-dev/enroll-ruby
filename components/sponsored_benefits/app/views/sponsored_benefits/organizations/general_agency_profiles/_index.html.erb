<%= form_tag sponsored_benefits.assign_organizations_general_agency_profiles_path(ids: [@form.plan_design_organization_id]), method: :post do %>
  <%= hidden_field_tag "broker_agency_profile_id", @form.broker_agency_profile_id %>
  <div class="row">
    <div class="col col-sm-8">
      <div class="col col-sm-4 mrg-top">
        <label><strong> Select General Agency: </strong></label>
      </div>
      <div class="col col-sm-4">
        <%= select_tag "general_agency_profile_id", options_for_select(@form.service.agencies.collect {|agency| [agency.legal_name, agency.id]}), prompt: "Select General Agency", required: true %>
      </div>
      <%= submit_tag "Submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
