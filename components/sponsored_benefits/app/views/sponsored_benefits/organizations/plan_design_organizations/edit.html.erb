<div class="container content-bottom">
  <div class="row">
    <div class="tab-content" id="myTabContent">
      <h3>
        <div>Edit Employer Information</div>
      </h3>
      <br />
      <%= form_for @organization, as: :organization, url: {action: "update"}, remote:true do |f| %>
        <%= hidden_field_tag :broker_agency_id, @broker_agency_profile.id.to_s %>
        <%= render 'shared/error_messages', :object => @organization %>
        <%= render 'form', f: f %>
      <% end %>
    </div>
  </div>
</div>