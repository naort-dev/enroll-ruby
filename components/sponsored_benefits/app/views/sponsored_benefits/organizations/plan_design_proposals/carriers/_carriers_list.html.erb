<% if selected_carrier_level == 'sole_source' %>
  <% carrier_names.each_pair do |ck, cv| %>
  <div class="col-xs-4 carriers">
    <%= link_to organizations_plan_design_organization_plans_path(plan_design_organization,
    carrier_id: "#{ck}",
    selected_carrier_level: selected_carrier_level,
    active_year: active_year), remote: true, :onclick => "$(this).find(':radio').prop('checked', true);" do %>
    <div class="col-xs-3">
      <%= radio_button_tag "sole_source", "#{ck}", false %>
    </div>
    <div class="col-xs-9">
        <label><h3><%= cv %></h3></label>
    </div>
    <% end %>
  </div>
  <% end %>
<% elsif selected_carrier_level == 'single_carrier'  %>
  <% carrier_names.each_pair do |ck, cv| %>
  <div class="col-xs-4 carriers">
    <%= link_to organizations_plan_design_organization_plans_path(plan_design_organization,
    carrier_id: "#{ck}",
    selected_carrier_level: selected_carrier_level,
    active_year: active_year), remote: true, :onclick => "$(this).find(':radio').prop('checked', true);" do %>
    <div class="col-xs-3">
      <%= radio_button_tag "single_carrier", "#{ck}", false %>
    </div>
    <div class="col-xs-9">
        <label><h3><%= cv %></h3></label>
    </div>
    <% end %>

  </div>
<% end %>
<% else %>
  <% metal_levels = ::Plan::REFERENCE_PLAN_METAL_LEVELS %>
  <% if check_plan_options_title %>
      <% metal_levels = enabled_metal_levels_for_single_carrier - ['dental'] %>
  <% end %>
  <% metal_levels.each_with_index do |kind, index| %>
    <div class="col-xs-4 metals">

        <%= link_to organizations_plan_design_organization_plans_path(plan_design_organization,
          selected_carrier_level: 'metal_level',
          metal_level: kind,
          active_year: active_year), remote: true, :onclick => "$(this).find(':radio').prop('checked', true);" do %>

            <div class="col-xs-3">
              <%= radio_button_tag :metal_level_for_elected_plan, kind, false %>
            </div>
            <div class="col-xs-9">
               <label><h3><%= kind.titleize %></h3></label>
            </div>

        <% end %>

    </div>
  <% end %>
<% end %>
