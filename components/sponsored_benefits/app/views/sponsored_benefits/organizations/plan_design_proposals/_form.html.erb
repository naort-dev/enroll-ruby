<%= hidden_field_tag :plan_design_organization_id, @plan_design_proposal.plan_design_organization._id %>
<%= hidden_field_tag :elected_plan_kind, '' %>
<%= hidden_field_tag :reference_plan_id, '' %>
<%= hidden_field_tag :plan_design_proposal_id, @plan_design_proposal.proposal.id %>
<%= hidden_field_tag :contribution_url, organizations_plan_design_organization_plan_design_proposal_contributions_path(@plan_design_proposal.plan_design_organization, @plan_design_proposal.proposal.id) %>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Quote for <%= @plan_design_proposal.plan_design_organization.legal_name %></h3>
      </div>
      <div class="panel-body">
        <%= render 'shared/error_messages', :object => @plan_design_proposal %>
        <%= render 'proposal_info', f: f %>
      </div>
    </div>
    <!--  Need below hidden button element to force form validations -->
    <div class="pull-right hidden">
      <%= f.submit "Save Quote", class: "btn btn-primary save-quote-btn" %>
    </div>
  </div>
</div>

<%= render 'employees' %>
<%= render 'carrier_options', f: f %>
<div class="reference-plans"></div>
<%= f.fields_for :profile, f.object.profile do |pr| %>
  <%= pr.fields_for :benefit_sponsorship, pr.object.benefit_sponsorships.first do |s| %>
    <%= s.fields_for :benefit_application, s.object.benefit_applications.first do |ba| %>
      <%= ba.fields_for :benefit_group, ba.object.benefit_groups.first do |bg| %>
        <%= render 'sponsored_benefits/organizations/plan_design_proposals/contributions/contribution_sliders', f: bg %>
      <% end %>
    <% end%>
  <% end %>
<% end %>

<div class="selected-plan"></div>
