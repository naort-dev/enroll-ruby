<div data-target="site.primaryAddress" class="row focus_effect personal-info-row">
  <div class="col-md-12 no-pd col-sm-12 col-xs-12">
    <div class="row row-form-wrapper no-buffer">
      <div class="col-md-2 col-sm-2 col-xs-12 form-group form-group-lg no-pd">
      </div>

      <div class="col-md-8 col-sm-8 col-xs-12 form-group form-group-lg no-pd address">
        <div class="form-group form-group-lg">
          <div class="row" style="margin: 0;">
            <div class="col-md-3 col-sm-3 col-xs-0 floatlabel"></div>
            <div class="col-md-3 col-sm-3 col-xs-0 floatlabel"></div>
          </div>
        </div>
      </div>

      <div class="col-md-2 col-sm-2 col-xs-12 form-group form-group no-pd">
        <a class="btn btn-sm btn-outline-primary d-none js-remove" data-action="click->site#removeLocation">Remove</a>
      </div>
    </div>

    <div class="row row-form-wrapper no-buffer">
      <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :address_1, class: "floatlabel form-control",  placeholder: "ADDRESS 1"%>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :address_2, class: "floatlabel form-control", placeholder: "ADDRESS 2" %>
      </div>
    </div>

    <div class="row row-form-wrapper no-buffer">
      <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :city, class: "floatlabel form-control interaction-field-control-office-location-address-city", placeholder: "CITY" %>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :state, class: "floatlabel form-control st interaction-field-control-office-location-address-state", placeholder: "STATE" %>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :zip, class: "floatlabel form-control zip interaction-field-control-office-location-address-zip", placeholder: "ZIP" %>
      </div>
    </div>
  </div>
  <div class="row"></div>
</div>
