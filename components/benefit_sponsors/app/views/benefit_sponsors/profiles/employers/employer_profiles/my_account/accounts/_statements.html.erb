<table class="table">
  <thead>
    <tr>
      <th>Year</th>
      <th>Statement Date</th>
      <th>Coverage Period</th>
      <th>Download</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    <% @invoice_years.each do |invoice_year| %>
    <tr data-toggle="collapse" data-target="#collapse2" id="<%= invoice_year %>" class="invoice_years">
      <td><i class='glyphicon glyphicon-plus' data-toggle='tooltip'></i> <%= invoice_year %></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <% invoices_2 = get_invoices_for_year(@invoices, invoice_year) %>
      <% if invoices_2.empty? %>
        <tr class="invoices <%= invoice_year %>">
          <td></td>
          <td>You have no invoices for this year</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% else %>
        <% invoices_2.each do |invoice| %>
          <tr class="invoices <%= invoice_year %>">
            <td></td>
            <td><%= invoice_formated_date(invoice.date) %></td>
            <td><%= invoice_coverage_date(invoice.date) %></td>
            <td><%= link_to "<i class='fa fa-cloud-download' aria-hidden='false' title='Download' data-toggle='tooltip'></i>".html_safe, download_invoice_profiles_employers_employer_profile(@employer_profile.id, :invoice_id => invoice.id), :target => "_blank" , :type => "pdf", :disposition =>  "inline" %></td>
            <td><%= link_to "<i class='glyphicon glyphicon-open-file' aria-hidden='true' data-toggle='tooltip'></i>".html_safe, show_invoice_profiles_employers_employer_profile(@employer_profile.id, :invoice_id => invoice.id), :target => "_blank"%></td>
          </tr>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('td i').click(function() {
    $(this).toggleClass("glyphicon glyphicon-plus glyphicon glyphicon-minus");
  });
  $(document).ready(function() {
    $('tr.invoices').hide();
    $('.invoice_years').each(function() {
      $(this).click(function() {
        $('tr.' + $(this).attr('id')).toggle();
      })
    });
  });
</script>