  function viewSummary(element) {
      selectedSummaryTitle = element.dataset.planTitle;
      selectedReferencePlanID = element.dataset.planId;
      document.getElementById('viewSummaryTitle').innerHTML = selectedSummaryTitle;
      fetch('/benefit_sponsors/benefit_sponsorships/' + selectedBenefitSponsorsID + '/benefit_applications/' + selectedBenefitApplicationID + '/benefit_packages/' + selectedBenefitPackageID + 'sponsored_benefits/new?kind=dental')
